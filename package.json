{
  "name": "softielplay",
  "version": "1.0.0",
  "description": "OpenAudio - YouTube tabanlı müzik platformu",
  "private": true,
  "workspaces": [
    "server",
    "app"
  ],
  "scripts": {
    "install:all": "npm install && cd server && npm install && cd ../app && npm install",
    "server": "cd server && npm start",
    "server:dev": "cd server && npm run dev",
    "app": "cd app && npm start",
    "app:android": "cd app && npm run android",
    "app:ios": "cd app && npm run ios",
    "app:web": "cd app && npm run web",
    "start": "npm run server",
    "dev": "npm run server:dev",
    "dev:all": "concurrently \"npm run server:dev\" \"npm run app\" --names \"SERVER,APP\" --prefix-colors \"blue,green\"",
    "start:all": "concurrently \"npm run server\" \"npm run app\" --names \"SERVER,APP\" --prefix-colors \"blue,green\"",
    "clean:ports": "powershell -ExecutionPolicy Bypass -File ./kill-ports.ps1"
  },
  "keywords": [
    "music",
    "youtube",
    "audio",
    "react-native",
    "expo"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}


